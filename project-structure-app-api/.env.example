# -----------------------
# App
# -----------------------
NODE_ENV=development
PORT=9000

# Host binding for Nest app
HOST=0.0.0.0

# Comma-separated allowed origins for CORS (no spaces). Example:
# http://localhost:3000,https://staging.yourapp.com
ALLOWED_HOSTS=http://localhost:3000

CORS_ALLOWED_ORIGINS=http://localhost:3000

# Observability / Environment label for Sentry etc. (development|staging|production)
SERVER_ENVIRONMENT=project-structure-app-api-dev

# -----------------------
# Database
# -----------------------
DB_HOSTNAME=
DB_PORT=5432
DB_USERNAME=
DB_PASSWORD=
DB_NAME=
DB_SSL=false
# -----------------------
# Database bootstrap
# -----------------------
# If true, creates the target database if it does not exist (connects to default postgres DB)
DB_CREATE_ON_START=false

# -----------------------
# Database migrations (Drizzle)
# -----------------------
# If true, the app will apply pending migrations on boot (see src/database/index.ts)
DB_MIGRATE_ON_START=false
# Folder where migrations are stored (drizzle.config.ts out setting)
DRIZZLE_MIGRATIONS_FOLDER=drizzle

# -----------------------
# Database seeding (JSON master data)
# -----------------------
# If true, the app will seed master data from JSON on boot
DB_SEED_ON_START=false

# -----------------------
# JWT
# -----------------------
TOKEN_KEY=
TOKEN_EXPIRES_IN=1d
TOKEN_ISSUER=
TOKEN_AUDIENCE=
REFRESH_TOKEN_TTL_DAYS=30

# -----------------------
# Password hashing (secure_password.util.ts)
# -----------------------
BCRYPT_SALT_ROUNDS=12

# -----------------------
# Swagger docs protection (optional)
# -----------------------
# Set these to enable HTTP Basic auth for /apis in non-production envs
SWAGGER_BASIC_USER=
SWAGGER_BASIC_PASS=
SWAGGER_URL_LOCAL=
SWAGGER_URL_DEV=
SWAGGER_URL_STAGE=
SWAGGER_URL_LIVE=

# -----------------------
# RATE LIMIT
# -----------------------
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=20

# -----------------------
# Password encryption (secure_password.util.ts)
# Example values shown; ensure they match your crypto setup.
# -----------------------
ALGORITHM=
INITVECTOR=          # 16 chars for AES-256-CBC IV if used as string
SECURITYKEY= # 32 chars for AES-256 key length

# -----------------------
# AWS / S3 (bucket.config.ts / aws-s3.util.ts)
# -----------------------
REGION=
BUCKET_NAME=       # prefix used in S3 keys, e.g. dev/ or prod/
S3_SIGNED_URL_TTL_SECONDS=86400         # 5 minutes

# -----------------------
# OTP Expire
# -----------------------
OTP_EXPIRE_AFTER_MIN=10

# -----------------------
# Mail (mailer.util.ts)
# -----------------------
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_FROM_ADDRESS=
MAIL_PASSWORD=""
SUPPORT_MAIL=
APP_LOGO=https://logo.jpg

# -----------------------
# Stripe (user.service.ts)
# -----------------------
STRIPE_SECRET_KEY=

# -----------------------
# Sentry (utils/sentry.ts, utils/logger.ts)
# -----------------------
# SENTRY_DSN=https://9af0db4878eaed47187568bd37a2e865@o4509450179903488.ingest.de.sentry.io/4509954820276304  #kp
# SENTRY_LOG_LEVEL=all   # one of: error|warn|info|debug|trace|fatal|all
# SENTRY_SEND_DEFAULT_PII=false

# -----------------------
# Firebase/FCM (notification.service.ts)
# Provide credentials via env (no file dependency)
# If FIREBASE_PROJECT_ID is not set, PROJECT_ID will be used as a fallback
# For FIREBASE_PRIVATE_KEY, escape newlines as \n when storing in .env
# -----------------------
FIREBASE_PROJECT_ID=project-structure-12cd6
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=""

# -----------------------
# i18n
# -----------------------
I18N_DEFAULT_NS=common